<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#fff7da"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="88dp"
        android:background="#FD8E09"
        android:onClick="goNumbers"
        style="@style/TVStyle"
        android:text="Numbers"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="88dp"
        android:background="#379237"
        android:onClick="goFamilyMembers"
        style="@style/TVStyle"
        android:text="Family Members"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="88dp"
        android:background="#8800A0"
        android:onClick="goColors"
        style="@style/TVStyle"
        android:text="Colors"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="88dp"
        android:background="#0dc9e2"
        android:onClick="goPhrases"
        style="@style/TVStyle"
        android:text="Phrases"
        />

</LinearLayout>